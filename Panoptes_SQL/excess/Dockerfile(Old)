# Use an official Python runtime as a parent image
FROM python:3.8-slim-buster as app

# Set the working directory in the container
WORKDIR /app

# Install necessary Debian packages for Tesseract and other dependencies
RUN apt-get update && \
    apt-get install -y libgl1-mesa-glx git default-libmysqlclient-dev tesseract-ocr && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Install PyTorch
RUN pip install torch torchvision

# Copy the local directory contents to the container
COPY . /app

# Use the MySQL official image
FROM mysql:latest as mysql

# Set environment variables for MySQL
ENV MYSQL_ROOT_PASSWORD=Rum8&Tag2
ENV MYSQL_DATABASE=mydatabase
ENV MYSQL_USER=teamAdmin
# REMEMBER: replace <generated_password> with your actual password
ENV MYSQL_PASSWORD=NookBrosGotchu

# Copy initialization scripts for MySQL
COPY init.sql /docker-entrypoint-initdb.d/

# Run main.py when the container launches
CMD ["python", "/app/main.py"]
